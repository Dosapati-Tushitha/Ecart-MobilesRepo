@model IEnumerable<MVC_01.DBModel.product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #EEE9E9;
    }
</style>
<h2>Products</h2>

<p>
    @Html.ActionLink("Add Products", "Create","",new { @class = "btn btn-warning" })

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.prodname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.brand.brand1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category.category1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.prodname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.brand.brand1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.category.category1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Details", "Details", new { id=item.id }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
