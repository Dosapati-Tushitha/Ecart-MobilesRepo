@model MVC_01.Models.LoginModel


@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>



    <title>loginform</title>
    <link href="~/style.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="loginform.css">
    <link rel="stylesheet" type="text/css" href="https://unsplash.com/collections/1708276/login-page-images">
    <link rel="stylesheet" href="https://unsplash.com/s/photos/contact-us">
    <link rel="stylesheet" href="https://www.pexels.com/search/background%20image%20for%20PC/">


    <style>
        body {
            margin: 0;
            padding: 0;
            background: url(https://images.pexels.com/photos/2138922/pexels-photo-2138922.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260);
            background-size: cover;
        }
    </style>
</head>
<body>
    <br /> <br /> <br /> <br />
                         <div class="loginbox" style="top:70% !important">
                             <img src="https://images.unsplash.com/photo-1596524430615-b46475ddff6e?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" class="logo">
                             <h1>LOGIN HERE</h1>
                             <form action="" method="POST">
                                 <fieldset style="width:1000px; padding-top:50px;">
                                     <div class="row justify-content-md-center">
                                         <div class="col-md-4">
                                             <div class="card">
                                                 <div class="card-header">
                                                 </div>
                                                 <div class="card-body">
                                                     @Html.AntiForgeryToken()
                                                     <div class="form-group">
                                                         &nbsp;&nbsp;&nbsp;
                                                         @Html.LabelFor(m => m.Email)
                                                         @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                                                         @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                                                     </div>
                                                     <div class="form-group">
                                                         &nbsp;&nbsp;&nbsp;
                                                         @Html.LabelFor(m => m.Password)
                                                         @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                                         @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                                                     </div>
                                                     <div class="form-group">
                                                         &nbsp;&nbsp;&nbsp;<input type="submit" name="submit" class="btn btn-primary" value="Login" />
                                                     </div>
                                                 </div>
                                 </fieldset>
                             </form>                         
</body>
@if (ViewBag.loginError != null)
{
    <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp; &nbsp;&nbsp; &nbsp;</span>
    <font color="red"> @ViewBag.loginError </font>
}
    <div>
    &nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Don't have an account,click here!", "Register", "Account")<br />
    </div>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br/>
</html>

